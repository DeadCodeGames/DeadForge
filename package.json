{
  "name": "deadforge",
  "version": "0.0.0",
  "description": "An Electron Launcher for DeadCode Projects.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build"
  },
  "keywords": [],
  "author": "DeadCodeGames",
  "license": "BSD-3-Clause",
  "repository": "github:DeadCodeGames/DeadForge-Launcher",
  "devDependencies": {
    "electron": "^29.0.1",
    "electron-builder": "^24.12.0"
  },
  "build": {
    "appId": "dev.deadcode.forge",
    "productName": "DeadForge",
    "win": {
        "target": "nsis",
        "artifactName": "dev.deadcode.forge-${version}.${ext}"
    },
    "mac": {
      "target": "dmg",
      "artifactName": "dev.deadcode.forge-${version}.${ext}"
    },
    "linux": {
      "target": "deb",
      "artifactName": "dev.deadcode.forge-${version}.${ext}"
    }
}
}
